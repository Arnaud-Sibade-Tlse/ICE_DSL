<?xml version="1.0" encoding="UTF-8"?>
<stateMachineDoItYourself:StateMachine
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:stateMachineDoItYourself="http://www.example.org/stateMachineDoItYourself"
    xsi:schemaLocation="http://www.example.org/stateMachineDoItYourself stateMachineDoItYourself.ecore">
  <state from="//@transition.0"
      to="//@transition.1"
      name="On"/>
  <state from="//@transition.1"
      to="//@transition.0"
      name="Off"/>
  <transition
      outgoing="//@state.0"
      incoming="//@state.1"
      name="OffToOn"/>
  <transition
      outgoing="//@state.1"
      incoming="//@state.0"
      name="OnToOff"/>
</stateMachineDoItYourself:StateMachine>
